<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{game.title}}</title>
    <link rel="icon" href="/img/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&display=swap" rel="stylesheet">
    <style>
        .gameList1 {
            text-align: center;
            font-size: 50px;
            font-family: Bungee Spice;
            background-color: #ffcd39;
            border-radius: 20px;
            border: 2px solid #ce1a00;
            letter-spacing: 20px;
            box-shadow: 0px 0px 100px #ce1a00;
        }

        .detail {
            font-family: Bungee Spice;
            background-color: #ffcd39;
            border-radius: 20px;
            border: 2px solid #ce1a00;
            box-shadow: 0px 0px 100px #ce1a00;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .vid {
            height: 627px;
            border-radius: 20px 20px 0px 0px;
            box-shadow: 0px 10px 50px black;
        }


        .ss {
            height: 295px;
            aspect-ratio: 16/9;
            border-radius: 10px;
            border: #ce1a00 2px solid;
            transition: 0.5s ease;
        }

        .ss:hover {
            scale: 1.05;
        }

        .info {
            border: #ce1a00 5px solid;
            margin: 20px 150px 20px 150px;
            padding: 20px;
            border-radius: 10px;
            background-color: #ffde7d;
        }
    </style>
</head>

<body style="background: url({{game.wallpaper}}); background-repeat: no-repeat; background-size: cover;">
    {{>header}}

    <div class="container">
        <div class="gameList1">
            {{game.title}}
        </div>

        <div class="detail">
            <video loop autoplay control class="vid" controlsList="nodownload">
                <source src="{{game.video}}" type="video/mp4">
            </video>
            <div style="text-align: center; font-size:50px">
                DETAILS
            </div>
            <div style="margin-left: 30px; margin-right: 30px; text-align: justify;">
                {{game.about}}
            </div>

            <div class="info">
                <div class="row" style="font-size: 30px;">
                    <div class="col-6" style="text-align: end;">
                        COMPANY:
                    </div>
                    <div class="col-6" style="text-align: left;">
                        {{game.company}}
                    </div>
                </div>

                <div class="row" style="font-size: 30px;">
                    <div class="col-6" style="text-align: end;">
                        GENRE:
                    </div>
                    <div class="col-6" style="text-align: left;">
                        {{game.genre}}
                    </div>
                </div>

                <div class="row" style="font-size: 30px;">
                    <div class="col-6" style="text-align: end;">
                        RATING:
                    </div>
                    <div class="col-6" style="text-align: left;">
                        {{game.rating}}
                    </div>
                </div>

                <div class="row" style="font-size: 30px;">
                    <div class="col-6" style="text-align: end;">
                        TOURNAMENT:
                    </div>
                    <div class="col-6" style="text-align: left;">
                        {{game.tournament}}
                    </div>
                </div>

                <div class="row" style="font-size: 30px;">
                    <div class="col-6" style="text-align: end;">
                        SELLS:
                    </div>
                    <div class="col-6" style="text-align: left;">
                        {{game.bought}}
                    </div>
                </div>
            </div>

            <div style="text-align: center; font-size:50px">
                SCREENSHOTS
                <div style="font-size: 15px;">
                    CLICK TO EXPAND
                </div>
            </div>

            <div class="row" style="margin: 10px; text-align: center;">
                <div class="col-6">
                    <div class="imgDiv">
                        <img src="{{game.SS1}}" class="ss" onclick="location.href='{{game.SS1}}'">
                    </div>
                </div>
                <div class="col-6">
                    <div class="imgDiv">
                        <img src="{{game.SS2}}" class="ss" onclick="location.href='{{game.SS2}}'">
                    </div>
                </div>
            </div>

            <div class="row" style="margin: 10px; text-align: center;">
                <div class="col-6">
                    <div class="imgDiv">
                        <img src="{{game.SS3}}" class="ss" onclick="location.href='{{game.SS3}}'">
                    </div>
                </div>
                <div class="col-6">
                    <div class="imgDiv">
                        <img src="{{game.SS4}}" class="ss" onclick="location.href='{{game.SS4}}'">
                    </div>
                </div>
            </div>

            <div class="row" style="margin: 10px; text-align: center;">
                <div class="col-12">
                    <input type="submit" value="BUY ${{game.price}}" onclick="location.href=''"
                        style="width: 600px; border-radius: 10px; font-family:Bungee Spice; border: 2px red solid; font-size: 80px; background-color:#ffde7d">
                </div>
            </div>

        </div>

    </div>

</body>

</html>