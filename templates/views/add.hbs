<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADD GAME</title>

    <link rel="icon" href="/img/weather.png">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/img/logo.png">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&display=swap" rel="stylesheet">

    <style>
        .textBox {
            width: 585px;
            border-radius: 10px;
            border: 2px red solid;
            margin-top: 10px;
            height: 37px;
            background-color: #ffcd39;
        }

        label {
            font-family: Bungee Spice;
            font-size: 35px;
        }

        .video {
            position: fixed;
            z-index: -1;
            height: 1012px;
            /* width: 1557px; */
            top: -168px;
            left: -243px;
        }
    </style>
</head>

<body>
    <video autoplay muted loop class="video" controlsList="nodownload">
        <source src="/video/gameVideo.mp4" type="video/mp4">
    </video>
    <form id="gameForm">
        <div class="container">
            <div style="font-family: Bungee Spice; font-size: 80px; text-align: center; border-radius: 20px;
            background-color: #ffcd39; border: 2px solid #ce1a00; margin: 10px 0px 10px 0px;">
                ADD GAME
            </div>
            <div style="background-color: rgba(4, 168, 4, 0.516); border-radius: 10px;">

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="gameCode">gameCode:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="gameCode" name="gameCode" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="img">img:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="img" name="img" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="title">title:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="title" name="title" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="genre">genre:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="genre" name="genre" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="about">about:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="about" name="about" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="company">company:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="company" name="company" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="rating">rating:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="number" id="rating" name="rating" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="tournament">tournament:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="tournament" name="tournament" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="price">price:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="number" id="price" name="price" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="bought">bought:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="number" id="bought" name="bought" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="wallpaper">wallpaper:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="wallpaper" name="wallpaper" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="video">video:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="video" name="video" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="SS1">SS1:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="SS1" name="SS1" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="SS2">SS2:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="SS2" name="SS2" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="SS3">SS3:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="SS3" name="SS3" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4" style="text-align: end;">
                        <label for="SS4">SS4:</label>
                    </div>
                    <div class="col-8" style="text-align: left;">
                        <input type="text" id="SS4" name="SS4" class="textBox"><br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12" style="text-align: center; margin-top:20px; margin:10px;">
                        <input type="submit" value="ADD GAME"
                            style="width: 400px; border-radius: 5px; font-family:Bungee Spice; background-color: #ffcd39; border: 2px red solid;">
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

</html>