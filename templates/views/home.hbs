<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&display=swap" rel="stylesheet">
    <link rel="icon" href="/img/logo.png">

    <style>
        .video {
            position: fixed;
            z-index: -1;
            height: 1012px;
            /* width: 1557px; */
            top: -168px;
            left: -243px;
        }

        .cell {
            margin: 10px;
            border: 2px solid #ce1a00;
            padding: 10px;
            text-align: center;
            font-family: Bungee Spice;
            border-radius: 20px;
            background-color: #ffcd39;
            font-size: 40px;
        }
    </style>
</head>

<body>
    <video autoplay muted loop controls class="video" controlsList="nodownload">
        <source src="/video/gameVideo.mp4" type="video/mp4">
    </video>

    <div class="container">
        {{>header}}
        <div class="row">
            <div class="col-6">
                <a href="/add" style="text-decoration: none">
                    <div class="cell" style="text-shadow: 0px 0px 50px green;">
                        ADD GAME
                    </div>
                </a>
            </div>
            <div class="col-6">
                <a href="/remove" style="text-decoration: none">
                    <div class="cell" style="text-shadow: 0px 0px 50px rgba(255, 0, 0, 0.656);">
                        REMOVE GAME
                    </div>
                </a>
            </div>
        </div>
    </div>
</body>

</html>